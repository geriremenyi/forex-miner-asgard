{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "virtualNetworkName": {
            "type": "string"
        },
        "mainAddressSpaces": {
            "type": "array"
        },
        "frontendSubnetAddressSpace": {
            "type": "string"
        },
        "backendSubnetAddressSpace": {
            "type": "string"
        },
        "ddosProtectionPlanEnabled": {
            "type": "bool"
        }
    },
    "variables": {},
    "resources": [
        {
            "name": "[parameters('virtualNetworkName')]",
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2019-09-01",
            "location": "[resourceGroup().location]",
            "dependsOn": [],
            "properties": {
                "addressSpace": {
                    "addressPrefixes": "[parameters('mainAddressSpaces')]"
                },
                "subnets": [
                    {
                        "name": "[concat(parameters('virtualNetworkName'), 'fe')]",
                        "properties": {
                            "addressPrefix": "[parameters('frontendSubnetAddressSpace')]"
                        }
                    },
                    {
                        "name": "[concat(parameters('virtualNetworkName'), 'be')]",
                        "properties": {
                            "addressPrefix": "[parameters('backendSubnetAddressSpace')]",
                            "serviceEndpoints": [
                                {
                                    "service": "Microsoft.Storage",
                                    "locations": [ "[resourceGroup().location]" ]
                                }
                            ]
                        }
                    }
                ],
                "enableDdosProtection": "[parameters('ddosProtectionPlanEnabled')]"
            }
        }
    ]
}