{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "variables": {
        "namingPrefix": "forexminer",
        "namingPostfix": "dpl",
        "deploymentMode": "Incremental",
        "vnetDeploymentName": "[concat(variables('namingPrefix'), 'vnet', variables('namingPostfix'))]",
        "keyvaultDeploymentName": "[concat(variables('namingPrefix'), 'kv', variables('namingPostfix'))]",
        "storageDeploymentName": "[concat(variables('namingPrefix'), 'sa', variables('namingPostfix'))]",
        "sqlDeploymentName": "[concat(variables('namingPrefix'), 'sql', variables('namingPostfix'))]",
        "clusterDeploymentName": "[concat(variables('namingPrefix'), 'aks', variables('namingPostfix'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "name": "[variables('vnetDeploymentName')]",
            "apiVersion": "2019-10-01",
            "properties": {
                "mode": "[variables('deploymentMode')]",
                "expressionEvaluationOptions": {
                    "scope": "inner"
                },
                "templateLink": {
                    "uri": "./vnet/VNet.template.json"
                },
                "parametersLink": {
                    "uri": "./vnet/VNet.parameters.json"
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "name": "[variables('keyvaultDeploymentName')]",
            "apiVersion": "2019-10-01",
            "dependsOn": [ 
                "[variables('vnetDeploymentName')]" 
            ],
            "properties": {
                "mode": "[variables('deploymentMode')]",
                "expressionEvaluationOptions": {
                    "scope": "inner"
                },
                "templateLink": {
                    "uri": "./keyvault/KeyVault.template.json"
                },
                "parametersLink": {
                    "uri": "./keyvault/KeyVault.parameters.json"
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "name": "[variables('storageDeploymentName')]",
            "apiVersion": "2019-10-01",
            "dependsOn": [ 
                "[variables('vnetDeploymentName')]" 
            ],
            "properties": {
                "mode": "[variables('deploymentMode')]",
                "expressionEvaluationOptions": {
                    "scope": "inner"
                },
                "templateLink": {
                    "uri": "./storage/StorageAccount.template.json"
                },
                "parametersLink": {
                    "uri": "./storage/StorageAccount.parameters.json"
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "name": "[variables('sqlDeploymentName')]",
            "apiVersion": "2019-10-01",
            "properties": {
                "mode": "[variables('deploymentMode')]",
                "expressionEvaluationOptions": {
                    "scope": "inner"
                },
                "templateLink": {
                    "uri": "./sql/SqlServer.template.json"
                },
                "parametersLink": {
                    "uri": "./sql/SqlServer.parameters.json"
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "name": "[variables('clusterDeploymentName')]",
            "apiVersion": "2019-10-01",
            "properties": {
                "mode": "[variables('deploymentMode')]",
                "expressionEvaluationOptions": {
                    "scope": "inner"
                },
                "templateLink": {
                    "uri": "./cluster/AzureKubernetesService.template.json"
                },
                "parametersLink": {
                    "uri": "./cluster/AzureKubernetesService.parameters.json"
                }
            }
        }
    ]
}